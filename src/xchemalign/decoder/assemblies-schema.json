{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "XChem Align Assemblies Schema",
    "description": "The Schema for XChem Align Assemblies Files",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "assemblies": {
            "$ref": "#/definitions/assembly-identity"
        },
        "crystalforms": {
            "$ref": "#/definitions/crystalform-identity"
        }
    },
    "required": [
        "assemblies",
        "crystalforms"
    ],
    "definitions": {
        "assembly-identity": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^[a-zA-Z0-9-_.]{1,80}$": {
                    "$ref": "#/definitions/assembly"
                }
            },
            "minProperties": 1
        },
        "crystalform-identity": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^[a-zA-Z0-9-_.]{1,80}$": {
                    "$ref": "#/definitions/crystalform"
                }
            },
            "minProperties": 1
        },
        "crystalform-assemblies-item-identity": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^[a-zA-Z0-9-_.]{1,80}$": {
                    "$ref": "#/definitions/crystalform-assemblies-item"
                }
            },
            "minProperties": 1
        },
        "assembly": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "reference": {
                    "type": "string"
                },
                "biomol": {
                    "type": "string"
                },
                "chains": {
                    "type": "string"
                }
            },
            "required": [
                "reference",
                "biomol",
                "chains"
            ]
        },
        "crystalform": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "reference": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 80
                },
                "assemblies": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/crystalform-assemblies-item-identity"
                        },
                        {
                            "type": "number"
                        }
                    ]
                }
            },
            "required": [
                "reference",
                "assemblies"
            ]
        },
        "crystalform-assemblies-item": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "assembly": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 80
                },
                "chains": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 80
                }
            },
            "required": [
                "assembly",
                "chains"
            ]
        }
    }
}
